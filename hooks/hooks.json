{
  "description": "ticket-tasuki plugin hooks: Task spawn guard + Redmine guard + Leader constraint guard (redmine only)",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/task_spawn_guard.py\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__redmine_epic_grid__*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/redmine_guard.py\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/leader_constraint_guard.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
